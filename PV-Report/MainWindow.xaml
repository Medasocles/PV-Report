<Window x:Class="PV_Report.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PV_Report"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Open MBox-File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="104"
                Click="OnOpenMboxFileButtonClick" />
        <TextBlock Text="{Binding MboxFilePath}" HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                   Margin="119,10,10,0" />
        <Button x:Name="button" Content="Parse MBox-File" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="104"
                Click="OnParseMboxFileButtonClick"/>
        <TextBlock x:Name="StatusTextBlock" HorizontalAlignment="Left" Margin="142,37,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="300"/>
    </Grid>
</Window>
