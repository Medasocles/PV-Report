<UserControl x:Class="PvReport.Views.Mbox.MboxImportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PvReport.Views.Mbox"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Content="Open MBox-File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="104"
                Command="{Binding OpenMboxFileCommand}" />
        <TextBlock Text="{Binding MboxFilePath}" HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                   Margin="119,10,10,0" />
        <Button x:Name="button" Content="Parse MBox-File" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="104"
                Command="{Binding ParseMboxFileCommand}"/>
    </Grid>
</UserControl>
